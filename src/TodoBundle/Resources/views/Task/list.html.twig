{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tasks list</h1>
    <table class="table table-striped table-bordered">
    {% for task in tasks %}
        <tr><td>{{ task.label }}</td></tr>
    {% else %}
        <tr><td>{% trans %}task.empty_list{% endtrans %}</td></tr>
    {% endfor %}
    </table>
{% endblock %}